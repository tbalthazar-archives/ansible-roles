// WARNING
//
// Do NOT edit this file while ZNC is running!
// Use webadmin or *controlpanel instead.
//
// Altering this file by hand will forfeit all support.
//
// But if you feel risky, you might want to read help on /znc saveconfig and /znc rehash.
// Also check http://en.znc.in/wiki/Configuration

AnonIPLimit = 10
ConnectDelay = 5
HideVersion = true
LoadModule = webadmin
LoadModule = fail2ban
LoadModule = lastseen
LoadModule = partyline
MaxBufferSize = 500
Motd = Connected to ZNC
PidFile = /var/run/znc/znc.pid
ProtectWebSessions = true
SSLCertFile = /usr/lib/znc/znc.pem
ServerThrottle = 30
Skin = _default_
StatusPrefix = *
Version = 1.6.2

<Listener listener0>
	AllowIRC = true
	AllowWeb = false
	IPv4 = true
	IPv6 = true
	Port = 6697
	SSL = true
	URIPrefix = /
</Listener>

<Listener listener1>
	AllowIRC = false
	AllowWeb = true
	IPv4 = true
	IPv6 = true
	Port = 6643
	SSL = false
	URIPrefix = /
</Listener>

<User {{ znc_irc_nick }}>
	Admin = true
	Allow = *
	AltNick = {{ znc_irc_nick }}_
	AppendTimestamp = false
	AutoClearChanBuffer = true
	AutoClearQueryBuffer = true
	Buffer = 5000
	ChanModes = +stn
	DenyLoadMod = false
	DenySetBindHost = false
	Ident = {{ znc_irc_ident }}
	JoinTries = 10
	LoadModule = controlpanel
	LoadModule = perform
	LoadModule = block_motd
	LoadModule = clientnotify
	MaxJoins = 0
	MaxNetworks = 1
	MaxQueryBuffers = 50
	MultiClients = true
	Nick = {{ znc_irc_nick }}
	PrependTimestamp = true
	QuitMsg = {{ znc_irc_quitmsg }}
	RealName = {{ znc_irc_realname }}
	TimestampFormat = [%H:%M:%S]
	Timezone = Europe/Brussels

	<Network geeknode>
		BindHost = 0.0.0.0
		Encoding = ^UTF-8
		FloodBurst = 4
		FloodRate = 1.00
		IRCConnectEnabled = true
		JoinDelay = 0
		LoadModule = kickrejoin
		LoadModule = savebuff
		Server = irc.geeknode.org +6697
		TrustedServerFingerprint = 68:8d:cf:c2:8b:bb:ba:26:cc:5c:54:86:5d:a5:08:a7:06:70:13:0b
		TrustedServerFingerprint = fb:cb:ba:bc:9f:5f:77:86:9c:94:40:d6:3b:1d:b3:c4:e6:23:ac:c7:5d:b4:0d:db:c4:40:b1:8e:91:b7:b1:0d

		<Chan #labriqueinter.net>
			Modes = +stn
		</Chan>
	</Network>

	<Network freenode>
		BindHost = 0.0.0.0
		Encoding = ^UTF-8
		FloodBurst = 4
		FloodRate = 1.00
		IRCConnectEnabled = true
		JoinDelay = 0
		LoadModule = kickrejoin
		LoadModule = savebuff
		LoadModule = nickserv <hidden>
		Server = chat.freenode.net +6697

		<Chan #laquadrature>
			Modes = +stn
		</Chan>

		<Chan #neutrinet>
			Modes = +stn
		</Chan>
	</Network>

	<Pass password>
	        Method = sha256
	        Hash = {{ znc_irc_password_hash }}
	        Salt = {{ znc_irc_password_salt }}
	</Pass>
</User>
